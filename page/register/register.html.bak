<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>注册</title>
    <link rel="stylesheet" href="../../css/register/register.css" />
  </head>
  <body>
    <button id="addBtn">添加</button>
    <div class="main" id="item" style="display: none">
      <input type="text" id="addNode" />
      <input type="text" id="addNode2" />
      <input type="button" value="添加" id="add" />
    </div>
    <div id="content1"></div>
    <div id="content2"></div>
  </body>
  <script type="text/javascript">
    var addBtn = document.getElementById('addBtn')
    addBtn.addEventListener('click', () => {
      let item = document.getElementById('item')
      item.style.display = 'inline'
    })

    var add = document.getElementById('add')
    add.addEventListener('click', () => {
      var addNode = document.getElementById('addNode')
      var content1 = document.getElementById('content1')
      content1.innerHTML = addNode.value
      var content2 = document.getElementById('content2')
      var addNode2 = document.getElementById('addNode2')
      content2.innerHTML = addNode2.value
      item.style.display = 'none'
    })
